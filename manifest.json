{
    "manifest_version": 3,
    "name": "Twitch Chat Overlay Cleaner",
    "version": "1.0",
    "description": "Remove overlays that block or hinder the visualization of Twitch chat messages.",
    "permissions": ["scripting", "activeTab", "tabs"],
    "action": {
        "default_title": "Clean Twitch Chat Overlay"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://www.twitch.tv/*"]
}